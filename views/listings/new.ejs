<% layout("/layouts/boilerplate") %>
<br><br>
<div class="row">
    <div class="col-8 offset-2" >
<h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" class="form-control" placeholder="Add a catchy title" name="listing[title]" required>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter a valid title</div>
        </div>  
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]" placeholder="Enter description" class="form-control" type="text" required></textarea><div class="invalid-feedback">Please enter a short description</div>
        </div>
        
        <div class="mb-3">
            <lable for="image" class="form-label">Upload Listing Image </lable>
            <input name="listing[image]" class="form-control" type="file" required><div class="invalid-feedback">Please enter a valid image URL</div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-label">Price</lable>
                <input type="number" name="listing[price]" class="form-control"  placeholder="Enter price" required>
                <div class="invalid-feedback">Please enter a valid price</div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-label">Country</lable>
                <input type="text" name="listing[country]" class="form-control"placeholder="Enter country name" required>
                <div class="invalid-feedback">Please enter a valid country name</div>
            </div>
        </div>


        
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input type="text" name="listing[location]" class="form-control"placeholder="i.e. Jaipur, Rajasthan" required>
            <div class="invalid-feedback">Please enter a valid location</div>
        </div><br><br>

        <button class="btn btn-dark add-btn">Add</button>
        <br><br><br><br>
    </form>
    </div>
</div>
